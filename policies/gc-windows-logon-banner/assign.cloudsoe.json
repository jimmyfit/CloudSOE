{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "policyDefinitionId": {
            "type": "string",
            "metadata": {
                "description": "The policy that this assignment is for."
            }
        },
        "assignmentName": {
            "type": "string",
            "metadata": {
                "description": "Name of the policyAssignment resource."
            }
        },
        "policyScopeId": {
            "type": "string",
            "metadata": {
                "description": "The scope at which policies, relating to the cloud SOE, will be assigned."
            }
        },
        "assignedBy": {
            "type": "string",
            "metadata": {
                "description": "Identifier for who is creating the assignment."
            }
        },
        "bannerTitle": {
            "type": "string",
            "metadata": {
                "description": "The text to display in the title of the Windows Logon banner."
            }
        },
        "bannerText": {
            "type": "string",
            "metadata": {
                "description": "The text to display in the body of the Windows Logon banner."
            }
        }
    },
    "resources": [
        {
            "type": "Microsoft.Authorization/policyAssignments",
            "name": "[parameters('assignmentName')]",
            "apiVersion": "2019-09-01",
            "location": "eastus",
            "properties": {
                "scope": "[parameters('policyScopeId')]",
                "policyDefinitionId": "[parameters('policyDefinitionId')]",
                "metadata": {
                    "assignedBy": "[parameters('assignedBy')]"
                },
                "parameters":  {
                    "BannerTitle": {
                        "value": "[parameters('bannerTitle')]"
                    },
                    "BannerText": {
                        "value": "[parameters('bannerText')]"
                    }
                }
            }
        }
    ]
}