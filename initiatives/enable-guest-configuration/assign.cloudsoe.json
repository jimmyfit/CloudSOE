{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "policyScopeId": {
            "type": "string",
            "metadata": {
                "description": "The scope at which policies, relating to the cloud SOE, will be assigned."
            }
        },
        "assignmentName": {
            "type": "string",
            "metadata": {
                "description": "Name of the policyAssignment resource."
            }
        },
        "assignedBy": {
            "type": "string",
            "metadata": {
                "description": "Identifier for who is creating the assignment."
            }
        }
    },
    "resources": [
        {
            "type": "Microsoft.Authorization/policyAssignments",
            "name": "[parameters('assignmentName')]",
            "apiVersion": "2019-09-01",
            "location": "eastus",
            "identity": {
                "type": "SystemAssigned"
            },
            "properties": {
                "scope": "[parameters('policyScopeId')]",
                "displayName": "Enable Guest Configuration",
                "metadata": {
                    "assignedBy": "[parameters('assignedBy')]"
                },
                "policyDefinitionId": "/providers/Microsoft.Authorization/policySetDefinitions/12794019-7a00-42cf-95c2-882eed337cc8"
            }
        },
        {
            "type": "Microsoft.Authorization/roleAssignments",
            "apiVersion": "2018-09-01-preview",
            "name": "[guid(parameters('assignmentName'))]",
            "dependsOn": [
                "[resourceId('Microsoft.Authorization/policyAssignments', parameters('assignmentName'))]"
            ],
            "properties": {
                "roleDefinitionId": "[resourceId('Microsoft.Authorization/roleDefinitions', 'b24988ac-6180-42a0-ab88-20f7382dd24c')]",
                "principalId": "[reference(parameters('assignmentName'),'2019-09-01','Full').Identity.principalId]",
                "scope": "[parameters('policyScopeId')]",
                "principalType": "ServicePrincipal"
            }
        },
        {
            "name": "[guid('/providers/Microsoft.Authorization/policyDefinitions/3cf2ab00-13f1-4d0c-8971-2ac904541a7e')]",
            "type": "Microsoft.PolicyInsights/remediations",
            "apiVersion": "2019-07-01",
            "dependsOn": [
                "[resourceId('Microsoft.Authorization/roleAssignments', guid(parameters('assignmentName')))]"
            ],
            "properties": {
                "policyAssignmentId": "[reference(parameters('assignmentName'),'2019-09-01','Full').Id]",
                "policyDefinitionReferenceId": "/providers/Microsoft.Authorization/policyDefinitions/3cf2ab00-13f1-4d0c-8971-2ac904541a7e"
            }
        },
        {
            "name": "[guid('/providers/Microsoft.Authorization/policyDefinitions/385f5831-96d4-41db-9a3c-cd3af78aaae6')]",
            "type": "Microsoft.PolicyInsights/remediations",
            "apiVersion": "2019-07-01",
            "dependsOn": [
                "[resourceId('Microsoft.Authorization/roleAssignments', guid(parameters('assignmentName')))]"
            ],
            "properties": {
                "policyAssignmentId": "[reference(parameters('assignmentName'),'2019-09-01','Full').Id]",
                "policyDefinitionReferenceId": "/providers/Microsoft.Authorization/policyDefinitions/385f5831-96d4-41db-9a3c-cd3af78aaae6"
            }
        },
        {
            "name": "[guid('/providers/Microsoft.Authorization/policyDefinitions/497dff13-db2a-4c0f-8603-28fa3b331ab6')]",
            "type": "Microsoft.PolicyInsights/remediations",
            "apiVersion": "2019-07-01",
            "dependsOn": [
                "[resourceId('Microsoft.Authorization/roleAssignments', guid(parameters('assignmentName')))]"
            ],
            "properties": {
                "policyAssignmentId": "[reference(parameters('assignmentName'),'2019-09-01','Full').Id]",
                "policyDefinitionReferenceId": "/providers/Microsoft.Authorization/policyDefinitions/497dff13-db2a-4c0f-8603-28fa3b331ab6"
            }
        },
        {
            "name": "[guid('/providers/Microsoft.Authorization/policyDefinitions/331e8ea8-378a-410f-a2e5-ae22f38bb0da')]",
            "type": "Microsoft.PolicyInsights/remediations",
            "apiVersion": "2019-07-01",
            "dependsOn": [
                "[resourceId('Microsoft.Authorization/roleAssignments', guid(parameters('assignmentName')))]"
            ],
            "properties": {
                "policyAssignmentId": "[reference(parameters('assignmentName'),'2019-09-01','Full').Id]",
                "policyDefinitionReferenceId": "/providers/Microsoft.Authorization/policyDefinitions/331e8ea8-378a-410f-a2e5-ae22f38bb0da"
            }
        }
    ]
}